{
	"name": "recipesearch-monorepo",
	"version": "0.0.1",
	"private": true,
	"packageManager": "npm@10.8.2",
	"workspaces": [
		"services/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"test": "turbo run test",
		"test:unit": "turbo run test",
		"test:e2e": "turbo run test:e2e",
		"lint": "turbo run lint",
		"format": "prettier --write .",
		"db:push": "turbo run db:push",
		"db:migrate": "turbo run db:migrate",
		"db:studio": "turbo run db:studio",
		"storybook": "turbo run storybook",
		"build-storybook": "turbo run build-storybook",
		"docker:build": "docker-compose build",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"train:model": "turbo run train",
		"extract:data": "turbo run extract",
		"web:dev": "turbo run dev --filter=@recipesearch/web"
	},
	"devDependencies": {
		"turbo": "^2.0.0",
		"@chromatic-com/storybook": "^3.2.4",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@storybook/addon-essentials": "^8.5.8",
		"@storybook/addon-interactions": "^8.5.8",
		"@storybook/addon-svelte-csf": "^5.0.0-next.23",
		"@storybook/blocks": "^8.5.8",
		"@storybook/svelte": "^8.5.8",
		"@storybook/sveltekit": "^8.5.8",
		"@storybook/test": "^8.5.8",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/jsonwebtoken": "^9.0.9",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"mdsvex": "^0.12.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"storybook": "^8.5.8",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.16.0",
		"bcryptjs": "^3.0.2",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.4",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.17.0",
		"pg": "^8.13.3"
	}
}
