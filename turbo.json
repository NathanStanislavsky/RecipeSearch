{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".svelte-kit/**", "build/**", "dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"test:e2e": {
			"dependsOn": ["^build"],
			"outputs": ["test-results/**", "playwright-report/**"],
			"cache": true
		},
		"test:run": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"check": {
			"outputs": []
		},
		"db:push": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"storybook": {
			"cache": false,
			"persistent": true
		},
		"build-storybook": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static/**"]
		},
		"extract": {
			"outputs": []
		},
		"train": {
			"dependsOn": ["extract"],
			"outputs": []
		}
	}
}
